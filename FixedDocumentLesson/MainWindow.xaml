<Window x:Class="FixedDocumentLesson.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FixedDocumentLesson"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DocumentViewer Name="documentViewer" Margin="0,0,0,33">
            <FixedDocument Name="fixedDocument">
                <PageContent>
                    <Ellipse Width="40" Height="60" Fill="Azure"/>
                </PageContent>
            </FixedDocument>
        </DocumentViewer>
        <Button Content="Загрузить" Name="uploadButton" HorizontalAlignment="Left" Margin="310,406,0,0" VerticalAlignment="Top" Click="UploadXpsFile"/>
        <Button Content="Сохранить как" Name="saveButton" HorizontalAlignment="Left" Margin="408,407,0,0" VerticalAlignment="Top" Click="SaveXpsAs"/>

    </Grid>
</Window>
